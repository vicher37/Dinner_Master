Sub dinnercandidate()
Dim i As Integer, j As Integer, p As Integer, q As Integer

q = 2
p = 2


If Cells(q, p).Value = "%" Then

For p = 2 To 4
For q = 2 To ActiveSheet.UsedRange.Rows.Count
Cells(q, p) = q + p
Next q
Next p
End If


i = Int((ActiveSheet.UsedRange.Rows.Count - 2 + 1) * Rnd + 2)
j = Int((ActiveSheet.UsedRange.Columns.Count - 2 + 1) * Rnd + 2)

Cells(i, j).Select
Selection.Font.Bold = True

msgbox "Dinner is... " & Cells(i, 1).Value & "! Let's go to " & Cells(i, j).Value & " now!"

' could link to ordering website as further enhancement
' 140612: has linked to yelp on individual websites

End Sub
